<html>
<head>
<script>
function show_alert() {
  if(confirm("Do you really want to do this?"))
    document.forms[0].submit();
  else
    return false;
}
</script>
</head>
<body>
<form onSubmit="if(!confirm('Is the form filled out correctly?')){return false;}" action="asdfg.html" method="post">
<input type="button" value="Button" onclick="show_alert()">
</form>
</body>
</html>